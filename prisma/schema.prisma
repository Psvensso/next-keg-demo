// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/utils/generated/prisma/client"
  previewFeatures = ["metrics"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Course {
  instituteName  String
  instituteNameSlug String
  courseName     String
  courseNameSlug String @id
  category       String
  deliveryMethod String
  location       String
  language       String?
  startDate      DateTime
  @@map("courses")
}
